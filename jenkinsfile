pipeline {
    agent any

    stages {
        stage('Clean') {
            steps {
                echo 'Cleaning Project..'
                sh './gradlew clean'
            }
        }
        stage('Build') {
            steps {
                echo 'Building Project..'
                sh './gradlew build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}